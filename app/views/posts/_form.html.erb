<div class="container mt-4">
	<div>
		<h3>Post</h3>
	</div>
	<%= form_with(model: post) do |form| %>
		<div class="form-group mb-2">
			<%= form.label :title, class: "form-label" %>
			<%= form.text_field :title, class: "form-control" %>
			<% object_errors_for post, :title %>
		</div>
		<% if form.object.persisted? %>
			<div class="form-group mb-2">
				<%= form.label :slug, class: 'form-label' %>
				<%= form.text_field :slug, class: 'form-control' %>
				<% object_errors_for post, :title %>
			</div>
		<% end %>
		<div class="form-group mb-2">
			<%= form.label :body, class: 'form-label' %>
			<%= form.text_area :body, rows: 8, class: 'form-control' %>
			<% object_errors_for post, :title %>
		</div>
		<div class="form-group d-inline-block">
			<%= form.submit "Submit", class: "btn btn-light border-0" %>
		</div>
		<div class="form-group d-inline-block">
			<%= link_to "Back", posts_path, class: "btn btn-light border-0" %>
		</div>
	<% end %>
</div>
