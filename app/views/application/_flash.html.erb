<% flash.each  do |flash_type, message| %>
	<%= content_tag :div, nil, class: bootstrap_class_for(flash_type), role: 'alert' do  %>
		<%= content_tag :div, class: 'container' do %>
			<%= button_tag "", { class: "btn-close",  data: {bs_dismiss: 'alert'}, "aria-label": "Close", type: 'button', name: nil } %>
			<%= content_tag :p, class: 'mb-0' do %>
				<%= message %>
			<% end %>
		<% end %>
	<% end %>
<% end %>
